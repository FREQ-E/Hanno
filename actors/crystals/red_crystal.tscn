export var buff_time := 3.0


func _handle_body_entered(body: Node) -> void:
	if body is StaticBody2D or body is TileMap:
		queue_free()
	
	elif body == player:
		var player_shooting: PlayerShooting = player.get_node(\"PlayerShooting\")
		player_shooting.damage = value
		player_shooting.buff_timer = buff_time
		queue_free()
"

